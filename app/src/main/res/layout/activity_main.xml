<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Babel Library"
            android:textSize="40dp"
            android:textColor="@color/text_color"
            android:textAlignment="center"
            android:layout_marginVertical="40dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="30dp"
            android:textColor="@color/text_color"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e-mail"
            android:layout_marginHorizontal="80dp"
            android:layout_marginVertical="20dp"
            android:inputType="textEmailAddress">
        </EditText>
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="password"
            android:layout_marginHorizontal="80dp"
            android:layout_marginVertical="20dp"
            android:inputType="textPassword">
        </EditText>
        <EditText
            android:id="@+id/passwordRepeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="repeat password"
            android:layout_marginHorizontal="80dp"
            android:layout_marginVertical="20dp"
            android:inputType="textPassword">
        </EditText>
        <TextView
            android:id="@+id/infoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password must have:"
            android:textColor="@color/text_color"
            android:layout_marginHorizontal="80dp"
            android:layout_marginVertical="5dp"/>
        <TextView
            android:id="@+id/passReq1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- at least 8 characters"
            android:textColor="@color/text_color"
            android:layout_marginHorizontal="80dp"
            android:layout_marginVertical="5dp"/>
        <TextView
            android:id="@+id/passReq2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- at least 1 uppercase letter"
            android:textColor="@color/text_color"
            android:layout_marginHorizontal="80dp"
            android:layout_marginVertical="5dp"/>
        <TextView
            android:id="@+id/passReq3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- at least 1 lowercase letter"
            android:textColor="@color/text_color"
            android:layout_marginHorizontal="80dp"
            android:layout_marginVertical="5dp"/>
        <TextView
            android:id="@+id/passReq4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- at least 1 digit"
            android:textColor="@color/text_color"
            android:layout_marginHorizontal="80dp"
            android:layout_marginVertical="5dp"/>
        <TextView
            android:id="@+id/passReq5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- at least 1 special character:\n_?!@#$%^&amp;*()-+"
            android:textColor="@color/text_color"
            android:layout_marginHorizontal="80dp"
            android:layout_marginVertical="5dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/signUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:backgroundTint="@color/button_color"
            android:textColor="@color/button_text_color"
            app:cornerRadius="0dp"
            android:layout_marginHorizontal="80dp"
            android:layout_marginVertical="50dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/signIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already Have an Account?"
            android:backgroundTint="@color/button_color"
            android:textColor="@color/button_text_color"
            app:cornerRadius="0dp"
            android:layout_marginHorizontal="80dp"/>
    </LinearLayout>
</RelativeLayout>